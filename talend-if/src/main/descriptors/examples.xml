<assembly>

    <id>examples</id>

    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>

        <!-- Copy Examples -->
        <fileSet>
            <directory>${basedir}/../examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <excludes>
                <!-- Exclude blueprint as it's a work in progress -->
                <exclude>blueprint/**</exclude>
                <!-- Exclude maven build target directory -->
                <exclude>**/target/**</exclude>
                <!-- Exclude Eclipse files and directories -->
                <exclude>**/.settings/**</exclude>
                <exclude>**/.project</exclude>
                <exclude>**/.classpath</exclude>
                <!-- Exclude Intellij IDEA files and directories -->
                <exclude>**/*.i??</exclude>
            </excludes>
        </fileSet>

    </fileSets>

</assembly>